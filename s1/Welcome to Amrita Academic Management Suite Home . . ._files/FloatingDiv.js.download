
/*********************************************************************************************
This is a floating div.
You can put any content inside the floating div and also can show anywhere in the screen,
	by calling its APIs.
A sample code is given below here.
<a 
   onmousemove="ShowFloatingDivContent('uniquename4'); return true;"
   onmouseover="ShowFloatingDivContent('uniquename4'); return true;"
   onmouseout="HideFloatingDivContent('uniquename4'); return true;"
   href="javascript:ShowFloatingDivContent('uniquename4')">
[show on mouseover, hide on mouseout]
</a>
<div 
   id="uniquename4" 
   style="display:none; 
      position:absolute; 
      border-style: solid; 
      background-color: white; 
      padding: 5px;">
Content goes here.
</div>
*********************************************************************************************/

var cX = 0; var cY = 0; var rX = 0; var rY = 0;
function UpdateFloatingDivCursorPosition(e){ cX = e.pageX; cY = e.pageY;}
function UpdateFloatingDivCursorPositionDocAll(e){ cX = event.clientX; cY = event.clientY;}
if(document.all) { document.onmousemove = UpdateFloatingDivCursorPositionDocAll; }
else { document.onmousemove = UpdateFloatingDivCursorPosition; }
function AssignFloatingDivPosition(d) {
	if(self.pageYOffset) {
		rX = self.pageXOffset;
		rY = self.pageYOffset;
		}
	else if(document.documentElement && document.documentElement.scrollTop) {
		rX = document.documentElement.scrollLeft;
		rY = document.documentElement.scrollTop;
		}
	else if(document.body) {
		rX = document.body.scrollLeft;
		rY = document.body.scrollTop;
		}
	if(document.all) {
		cX += rX; 
		cY += rY;
		}
	d.style.left = (cX+10) + "px";
	d.style.top = (cY+10) + "px";
}
function HideFloatingDivContent(d) {
	if(d.length < 1) { return; }
	document.getElementById(d).style.display = "none";
}
function ShowFloatingDivContent(d) {
	if(d.length < 1) { return; }
	var dd = document.getElementById(d);
	AssignFloatingDivPosition(dd);
	dd.style.display = "block";
}
function ReverseFloatingDivContentDisplay(d) {
	if(d.length < 1) { return; }
	var dd = document.getElementById(d);
	AssignFloatingDivPosition(dd);
	if(dd.style.display == "none") { dd.style.display = "block"; }
	else { dd.style.display = "none"; }
}
